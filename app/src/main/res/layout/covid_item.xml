<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    style="@style/CardView.Light"
    android:layout_marginTop="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginRight="8dp"
    tools:ignore="ContentDescription"
   >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp">

        <TextView
            android:id="@+id/coronaCountry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="@string/app_name"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/newcases"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="33dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="@string/app_name"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@+id/coronaCountry"
            app:layout_constraintTop_toBottomOf="@+id/coronaCountry" />

        <TextView
            android:id="@+id/totalcases"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="@string/app_name"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@+id/newcases"
            app:layout_constraintTop_toBottomOf="@+id/newcases" />

        <TextView
            android:id="@+id/newrecoveries"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="33dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="@string/app_name"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@+id/totalcases"
            app:layout_constraintTop_toBottomOf="@+id/totalcases" />

        <TextView
            android:id="@+id/totalrecoveries"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="@string/app_name"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@+id/newrecoveries"
            app:layout_constraintTop_toBottomOf="@+id/newrecoveries" />


        <TextView
            android:id="@+id/newdeaths"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="33dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="@string/app_name"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@+id/totalrecoveries"
            app:layout_constraintTop_toBottomOf="@+id/totalrecoveries" />

        <TextView
            android:id="@+id/totaldeaths"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="@string/app_name"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@+id/newdeaths"
            app:layout_constraintTop_toBottomOf="@+id/newdeaths" />

        <TextView
            android:id="@+id/updateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="33dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="@string/app_name"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@+id/totaldeaths"
            app:layout_constraintTop_toBottomOf="@+id/totaldeaths" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
